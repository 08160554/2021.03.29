}
int main(int argc,char ** argv)
{
    glutInit(&argc,argv);
    glutInitDisplayMode(GLUT_DOUBLE | GLUT_DEPTH);
    glutCreateWindow("08160554");
    glutDisplayFunc(display);
   // glutKeyboardFunc(keyboard);      ///按下去彈起來
    glutMotionFunc(motion);    ///mouse motion 在動
    glutMainLoop();
}
